{% extends '@VadimBlog/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Login</h1>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                {{ form_row(form.submit) }}
                <a href="{{ path('vadim_blog_registration') }}">Register</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
